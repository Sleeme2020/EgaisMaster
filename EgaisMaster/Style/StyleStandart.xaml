<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="TextBoxClassicBase">
        <Setter Property="Button.Background" Value="{x:Null}"/>
        <Setter Property="Button.Foreground" Value="White"/>
        <Setter Property="Button.Margin" Value="10, 10, 10,10"/>
    </Style>
    
    
    <Style x:Key="ButtonClassicBase">
        <Setter Property="Button.Background" Value="{x:Null}"/>
        <Setter Property="Button.BorderBrush" Value="#FF31658C"/>
        <Setter Property="Button.FontSize" Value="18"/>
        <Setter Property="Button.FontWeight" Value="DemiBold"/>
        <Setter Property="Button.Foreground" Value="White"/>
    </Style>

    <Style x:Key="ButtonClose" BasedOn="{StaticResource ButtonClassicBase}">
        <Setter Property="Button.FontSize" Value="14"/>
        <Setter Property="Button.BorderThickness" Value="0,0,0,0"/>
    </Style>

    <Style x:Key="ButtonMinimals" BasedOn="{StaticResource ButtonClassicBase}">
        <Setter Property="Button.FontSize" Value="14"/>
        <Setter Property="Button.BorderThickness" Value="0,0,0,0"/>
    </Style>

</ResourceDictionary>